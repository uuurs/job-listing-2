<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-default") %>
</div>

<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" >
    range
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider  ">
    <li>
      <%= link_to("range_with_wage_max", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("range_with_wage_min", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("range_with_updated", jobs_path) %>
    </li>
  </ul>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>Job</td>
      <td>wage_max</td>
      <td>wage_min</td>
      <td>update</td>
    </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
